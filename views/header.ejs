  <link rel="stylesheet" href="/indexStyles.css" />
  <link rel="stylesheet" href="/register.css" />
  <link rel="stylesheet" href="/aboutStyles.css" />
  <link rel="stylesheet" href="/commonstyles.css" />

  <!-- Google fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Kulim+Park&display=swap" rel="stylesheet" />
</head>

<body>
  <!-- Logic for displaying (Login/Register Butttons) or (user profile) ,if user is unauthenticated or isAuthenticated  -->

  <% let one=""; let inOrOut=""; if(useravatar == "" && username == "") {
    inOrOut = `
    <div id="loginRegister">
      <div
        class="ui buttons"
        id="loginRegister"
        style="margin-top: 4px !important; margin-bottom: 0px !important"
      >
        <a href="/h/login"><button class="ui button">Login</button></a>
        <div class="or"></div>
        <a href="/h/register"
          ><button
            class="ui button active"
            style="background-color: #5e81cf; color: white"
          >
            SignUp
          </button></a
        >
      </div>
    </div>
    `; } else if(username != "") { console.log(useravatar,"hello");
    if(useravatar != ""){ one = useravatar[0].userImage; } else if(useravatar ==
    ""){ console.log("useravatar[0].userImage","hello");
    one="https://cdn2.iconfinder.com/data/icons/ios-7-icons/50/user_male2-512.png"
    } inOrOut = `
    <div class="userProfile">
      <a id="userLabel" class="ui basic image big label">
        <img src="${one}" />
        ${username}
        <i class="dropdown icon" style="margin-left: 10px; margin-right: 0"></i>
      </a>
    </div>
    <div id="popspecial" class="ui flowing popup top left transition">
      <a href="/h/dashboard/${username}"
        ><button class="ui button" style="margin: 0px">My Dashboard</button></a
      >
      <br />
      <a href="/h/logout"
        ><button class="ui button" style="margin: 10px 0; margin-bottom: 0">
          Logout
        </button></a
      >
    </div>
    `; } %>

  <!-- Following Menu -->
  <!-- this is displayed when a particular section is scrolled on the page (handled using jQuery) -->

  <div class="ui large top hidden fixed menu" id="follMenu" style="padding: 7px 0 !important">
    <div class="ui container">
      <a href="/" class="logo" style="padding: 0; text-align: center">
        <img src="../img/logo.png" class="ui mini image" />
      </a>
      <a href="/" class="item"> HeckFree </a>
      <a href="/h/about" class="item">About</a>

      <div class="ui right menu inOrOutDesk">
        <!-- inOrOut variable is set above as per Authentication state of user -->
        <%- inOrOut %>
      </div>
    </div>
  </div>
  <!-- following menu ends -->

